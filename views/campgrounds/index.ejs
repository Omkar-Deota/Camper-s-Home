<%layout('layouts/boilerplate')%>
    <h2>All campgrounds</h2>
    <a href="/campgrounds/new">Add campground</a>
        <% for(let campground of campgrounds) { %>
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%=campground.image%>" alt="Can't load image" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <div class="card-title"><h4><%=campground.title%></h4></div>
                            <p class="card-text"><%=campground.description%></p>
                            <p class="card-text">
                                <small class="text-muted"><%=campground.location%></small>
                            </p>
                            <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View <%=campground.title%></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>


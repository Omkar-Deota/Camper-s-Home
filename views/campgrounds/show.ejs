<%layout('layouts/boilerplate')%>
<div class="row">
  <div class="col-md-6  mb-3" >
    <div class="card">
      <img src="<%=campgrounds.image%>" alt="" class="card-img-top">
      <div class="card-body">
        <h4 class="card-title"><%=campgrounds.title%></h4>
        <p class="card-text"><%=campgrounds.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%=campgrounds.location%></li>
        <li class="list-group-item">$<%=campgrounds.price%>/night</li>
      </ul>
      <div class="card-body">
        <a class="card-link btn btn-info" href="/campgrounds/<%=campgrounds._id%>/edit">Edit</a>
        <form class="d-inline" action="/campgrounds/<%=campgrounds._id%>?_method=DELETE" method="POST">
          <button class="btn btn-danger">DELETE</button>        
            </form>
      </div>
      <div class="card-footer text-muted">
        2 days ago
      </div>
    </div>
    
</div>
<div class="col-md-6">
  <h2>Rate me!!!</h2>
  <form action="/campgrounds/<%=campgrounds._id%>/reviews" method="POST" class="mb-3 validation_req" novalidate>
    <div class="mb-3">
      <label class="form-label" for="rating">Rating</label>
      <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
    </div>
    <div class="mb-3">
      <label class="form-label" for="body">Review</label>
      <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
      <div class="valid-feedback">
        Looks good
      </div>
    </div>
    <button class="btn btn-success">Post a review</button>
  </form>
  <% for(let review of campgrounds.reviews){%>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%=review.rating%></h5>
        <p class="card-text">Reviews: <%=review.body%></p>
        <form action="/campgrounds/<%=campgrounds._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
          <button class="btn-sm btn-danger">Delete</button>
        </form>
      </div>
      
    </div>
    <%}%>
</div>
</div>
     

  